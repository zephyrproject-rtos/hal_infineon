  ER_IROM1 0x10001000 0x00020000  {  ; load address = execution address
   *.o (RESET, +First)
   *(InRoot$$Sections)
   .ANY (+RO)
   .ANY (+XO)
  }
  RW_IRAM1 0x20000000 0x00003FFC  {  ; RW data
   *.o (VENEERS, +First)
   .ANY (+RW +ZI)
  }
